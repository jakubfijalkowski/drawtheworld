<Grid
	x:Class="DrawTheWorld.Game.Controls.LoadingPopup"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
	
	<Grid.RowDefinitions>
		<RowDefinition Height="Auto" />
		<RowDefinition Height="180"/>
	</Grid.RowDefinitions>
	
	<Canvas x:Name="SplashCanvas" Grid.Row="0">
		<Image x:Name="SplashScreenImage" Source="/Assets/Images/Logos/SplashScreen.png" />
	</Canvas>
	<ProgressRing x:Name="Progress" Grid.Row="1" IsActive="False" Margin="5" Width="40" Height="40" Foreground="White" />

</Grid>
